{{ blogPost }}

<div class="flex-container card blog-post">
    <div class="card-body">
        <div class="row">
        <div class="col-6 title">
            <h2>{{ title }}</h2>
        </div>
        <div class="col-6 name-date">
            <p>{{ name }} {{ dateCreated }}</p>
        </div>
        </div>
        <div class="row">
        <div class="col-12 content">
            <p>{{ content }}</p>
        </div>
        </div>
    </div>
</div>

{{/blogPost}}

<div class="card">
    <div class="card-body">
        <div>
            <label>Comment</label>
            <input type="input">
            <button>Confirm</button>
        </div>
    </div>
</div>

{{#each comment}}

<div class="card">
    <div class="card-body">
        <div>
            <span>Comments</span>
        </div>
        <div class="prev-comments">
            {{ text }}
        </div>
    </div>
</div>

{{/each}}